@model EmployeeManagementPortal.MVC.ViewModels.EmployeeTasksViewModel

@{
    ViewData["Title"] = "Employee Task Details";
}
<div>
    <h1>Employee Task</h1>
    <h4>Employee Task Details</h4>
    <hr />
    <div class="row">
        <br />
        <div class="col-md-6"></div>
        <div class="col-md-6 footer-buttons">
            <a asp-action="Index" class="btn btn-outline-default float-right">Back to List</a><span>&nbsp; &nbsp;</span>
            <a asp-action="Edit" asp-controller="EmployeeTask" asp-route-id="@Model.EmployeeTaskId" style="margin-right: 5px;" class="btn btn-warning float-right">Edit</a>
        </div>
    </div>
      <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" readonly />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TaskId" class="control-label"></label>
                <input asp-for="TaskId" class="form-control" readonly />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TotalNoOfHours" class="control-label"></label>
                <input asp-for="TotalNoOfHours" class="form-control" readonly />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <input asp-for="Priority" class="form-control" readonly />
            </div>
        </div>
    </div>
</div>