@model IEnumerable<EmployeeManagementPortal.MVC.ViewModels.EmployeeTasksViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee Task Details</h1>
<br />
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalNoOfHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalNoOfHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="EmployeeTask" asp-route-id="@item.EmployeeTaskId" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-controller="EmployeeTask" asp-route-id="@item.EmployeeTaskId" class="btn btn-primary">Details</a>
                    <a asp-action="Delete" asp-controller="EmployeeTask" asp-route-id="@item.EmployeeTaskId" class="btn btn-danger">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
