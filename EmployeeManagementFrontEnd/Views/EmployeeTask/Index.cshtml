@model IEnumerable<EmployeeManagementPortal.MVC.ViewModels.EmployeeTasksViewModel>

@{
    ViewData["Title"] = "Employees Tasks List";
}

<h1>Employee Task Details</h1> 

<p id='btnAdd'>
    <a asp-action="Create" class="btn btn-primary">Assign Task</a>
</p>
<br /> 
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalNoOfHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentDate)
            </th>
            <th align="center">
                @Html.DisplayName("Actions")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalNoOfHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentDate)
                    @*@Html.DisplayFor(modelItem => item.CurrentDate.Value?.ToString("MM/DD/YY"))*@
                </td>
                <td>
                    <a asp-action="Details" asp-controller="EmployeeTask" asp-route-id="@item.EmployeeTaskId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-controller="EmployeeTask" asp-route-id="@item.EmployeeTaskId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-controller="EmployeeTask" asp-route-id="@item.EmployeeTaskId" class="btn btn-danger">Delete</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
